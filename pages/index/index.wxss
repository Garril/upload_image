.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100vh;
  width: 100vw;
  overflow: hidden;
  background-color: #c4c7ca;
}
.box-container {
  height: 100%;
  width: 100%;
}
.box-container .box {
  height: 50%;
  width: 50%;
  display: inline-block;
  box-sizing: border-box;
}
.upload-wrapper {
  display: flex; /* 使用flex布局使子元素垂直居中 */
  justify-content: center;
  align-items: center;
  width: 70%;
  height: 500rpx;
  box-sizing: border-box;
  border: 1px dashed rgb(243, 226, 226);
  padding: 10rpx 10rpx;
  overflow: hidden;
}

.upload-wrapper .upload-img {
   width: 480rpx;
   height: 480rpx;
}

.btn {
  margin: 50rpx;
  width: 290rpx !important;
  font-size: 30rpx;
  font-weight: 400;
}